<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_NoCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Assessments"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="184dp"
            android:text="Assessment Type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="124dp"
            android:text="Assessment Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="110dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:text="Course Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_AssesmentName"
            android:layout_width="179dp"
            android:layout_height="39dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="108dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_CourseName"
            android:layout_width="179dp"
            android:layout_height="41dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="44dp"
            android:editable="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_AssessmentType"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_AddAssessment"
            android:layout_width="176dp"
            android:layout_height="42dp"
            android:layout_marginStart="192dp"
            android:layout_marginTop="452dp"
            android:onClick="btn_AddAssessment"
            android:text="Add Assessment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="236dp"
            android:text="Goal Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="312dp"
            android:text="Due Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_Month"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="272dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_DueMonth"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="340dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_Year"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="272dp"
            app:layout_constraintStart_toEndOf="@+id/sp_Day"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_DueYear"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            app:layout_constraintStart_toEndOf="@+id/sp_DueDay"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_Day"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="272dp"
            app:layout_constraintStart_toEndOf="@+id/sp_Month"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_DueDay"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            app:layout_constraintStart_toEndOf="@+id/sp_DueMonth"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_GoalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="396dp"
            android:text="Create Alert for Goal Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>